---

interface Props {
    title: string;
    price: number;
    description: string;
    subtitle?: string;
    href?: string;
    listAdvice?: string[];
    list: string[];
    finalMessage?: string;
    anualPrice?: string;
    active?: boolean;
}

const { title, price, description, href, list, active, finalMessage, listAdvice, subtitle } = Astro.props;
---

<div class={`plan-card br-14 text-left ${active ? '' : 'dark'}`}>
    <span>{`${price > 9000 ? '+' : ''} S/${price}`}.00</span>
    <h2 class="fs-5 fw-400" style="color: white;">{title}</h2>
    <p>{description}</p>
    <ul class="f-col g-2 m-0 p-0 ">
        {
            list.map((item) => (
                <li class="fs-custom-15-5 fw-300 f-row g-2">
                    <span class="d-flex f-center">
                        <svg viewBox="0 0 24 24" height="16" fill="none">
                            <path d="m6 12 4 4 9-8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </span>
                    {item}
                </li>
            ))
        }
    </ul>
    <a href={href || "/contacto"} class="fs-2 fw-500 br-6 d-flex f-center"> Obtener Plan </a>
</div>
