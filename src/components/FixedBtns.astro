---
import { Image } from "astro:assets";
import Whatsapp from "@Assets/icons/whatsapp.webp";
import { Icon } from "@lifo123/library";
---

<span class="fixed fixed-btns f-col f-center">
    <ul class="f-col g-3 f-center">
        <li class="br-50 o-hidden d-flex f-center pointer">
            <a
                href="https://wa.me/51900081894"
                target="_blank"
                class="d-flex f-center o-hidden"
                style="height: 50px; aspect-ratio: 1/1;"
            >
                <Image
                    src={Whatsapp}
                    alt="Whatsapp"
                    width="64"
                    height="64"
                    style={{ marginBottom: "1px" }}
                    class="image-whatsapp"
                />
            </a>
        </li>
        <li
            class="br-50 o-hidden d-flex f-center icon pointer"
            style="background-color: #6c6c6c2d;"
            onclick="window.scrollTo({top: 0});"
        >
            <Icon icon="arrow" size={26} className="no-select" />
        </li>
    </ul>
</span>

<style>
    .fixed-btns {
        position: fixed;
        bottom: 1rem;
        right: 1rem;
    }
    .fixed-btns ul > li {
        height: 50px;
        width: 50px;
        aspect-ratio: 1/1;
    }
    .image-whatsapp {
        max-width: 100%;
        height: auto;
        aspect-ratio: 1 / 1;
    }
</style>
